.default-container
  %header.sp-header.visible-sp
  %nav.bread-crumbs

  %main.contener
    .contener__content
      %section.contener__content_mypage-icon
        %a
          %figure
            = image_tag ""
          %h2.contener__content_mypage-icon_bold
            nanashi
