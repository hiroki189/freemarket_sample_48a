.tbody
  .tr
    .th 出品者
    .td
      = link_to @products.name, ""
      %div
        .user-rank
          %i.fas.fa-laugh.user-rank_good
          %span 0
        .user-rank
          %i.fas.fa-meh.user-rank_normal
          %span 0
        .user-rank
          %i.fas.fa-frown.user-rank_bad
          %span 0
  .tr
    .th カテゴリー
    .td
      = link_to  @products.product_category_id,""
      %i.fas.fa-chevron-right
        =link_to "","" ,class: "tab_sub-category"
  .tr
    .th ブランド
    .td
      = link_to '#' do
        %div
          ブランド名(仮)
  -# .tr
  -#   .th サイズ
  -#   .td
  .tr
    .th 商品の状態
    .td
      = @products.condition_id_i18n
  .tr
    .th 配送料の負担
    .td
      = @products.delivery_responsibility_i18n
  .tr
    .th 配送の方法
    .td
      = @products.delivery_method_i18n
  .tr
    .th 配送元地域
    .td
      - prefecture_id = @products.delivery_area
      = Prefecture.find(prefecture_id).name
  .tr
    .th 発送日の目安
    .td
      = @products.delivery_day_i18n

