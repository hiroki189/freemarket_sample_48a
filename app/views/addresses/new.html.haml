.headernew
  .headernew__icons
    = link_to root_path, class:'hovering' do
      = image_tag("/images/m-logo.png",width:'250px',height:'80px',id:"titleIcon")
  .headernew__stepmeter
    = image_tag("/images/registration_address.png",width:'450px',height:'90px')

.mainframe
  .mainframe__title 
    %b 発送元・お届け先住所入力
  .mainframe__contents
    .mainframe__contents__unit
      %b 郵便番号
      %span.mainframe__contents__unit__span 必須
      %input{placeholder:'例）123-4567'}
    .mainframe__contents__unit
      %b 都道府県
      %span.mainframe__contents__unit__span 必須
      %input{placeholder:'北海道'}
    .mainframe__contents__unit
      %b 市区町村 
      %span.mainframe__contents__unit__span 必須
      %input{placeholder:'例）横浜市緑区'}
    .mainframe__contents__unit
      %b 番地
      %span.mainframe__contents__unit__span 必須
      %input{placeholder:'例(1-1-1'}
    .mainframe__contents__unit
      %b 建物名
      %span.mainframe__contents__unit__span-gray 
      %input{placeholder:'例(aaa'}
    .mainframe__contents__unit
      %b 電話
      %span.mainframe__contents__unit__span-gray 
      %input{placeholder:'例(000-0000-0000)'}

    .mainframe__contents__proceedbutton
      = link_to '次へ進む', new_payment_path, id:"linkbutton"

= render partial:"/registrations/stepMeterFooter"
