.Container
  %header
  .bread-crumbs
  .mypage
    = render partial: "/mypage-nav"
    .mypage__content
      .credit 
        %h2.credit__head クレジットカード情報入力
        .credit__content
          -# = form_tag("/card", method: :POST) do
          .credit__content__form
            .credit__content__form__group
              %label.credit__content__form__group__no カード番号
              %span.credit__content__form__group__require 必須
              %input{maxlength: "16", type: "text", class: "number", id: "payment_card_no", placeholder: "半角数字のみ"}
              %ul.credit__content__form__group__list
                %li.card
                  = image_tag "/images/card/visa.svg", width: "49", height: "20"
                %li.card
                  = image_tag "/images/card/mastercard.svg", width: "34", height: "20"
                %li.card
                  = image_tag "/images/card/saison.svg", width: "30", height: "20"
                %li.card
                  = image_tag "/images/card/jcb.svg", width: "32", height: "20"
                %li.card
                  = image_tag "/images/card/americanexpress.svg", width: "21", height: "20"
                %li.card
                  = image_tag "/images/card/dinersclub.svg", width: "32", height: "20"
                %li.card
                  = image_tag "/images/card/discover.svg", width: "32", height: "20"
            .credit__content__form__group
              %label.credit__content__form__group__expire 有効期限
              %span.credit__content__form__group__require 必須
              .credit__content__form__group__select
                %select.credit__content__form__group__select__month>
                  %option{value: "01"} 01
                  %option{value: "02"} 02
                  %option{value: "03"} 03
                  %option{value: "04"} 04
                  %option{value: "05"} 05
                  %option{value: "06"} 06
                  %option{value: "07"} 07
                  %option{value: "08"} 08
                  %option{value: "09"} 09
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                %i.fas.fa-chevron-down
                　月
                %select.credit__content__form__group__select__year>
                  %option{value: "19"} 19
                  %option{value: "20"} 20
                  %option{value: "21"} 21
                  %option{value: "22"} 22
                  %option{value: "23"} 23
                  %option{value: "24"} 24
                  %option{value: "25"} 25
                  %option{value: "26"} 26
                  %option{value: "27"} 27
                  %option{value: "28"} 28
                  %option{value: "29"} 29
                　年

            .credit__content__form__group
              %label.credit__content__form__security セキュリティコード
              %span.credit__content__form__group__require 必須
              %input{type: "text", class: "cvc", id: "payment_card_security_code", name: "cvc", placeholder: "カード背面4桁もしくは3桁の番号"}
              .credit__content__form__group__help
                %span.credit__content__form__group__help__icon ?
                %span カード裏面の番号とは？

            .credit__content__card__link
              = link_to '#' do
                %span 追加する
  %footer
